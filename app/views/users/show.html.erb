<html class= "header-background">
<body>
<div class="profile-wrapper">
  <div class="profile-userinfo">
    <h1><%= @user.username %> </h1>
    <div class="avatar">
      <img src="<%= @user.avatar_with_default %>">
    </div>

  <div class="roles">
    <h5><%= roles(@user).join("/") %><h5>
    <p class="location"><%= @user.location %> | <a href="<%= @user.website %>"><%= @user.website %></a></p>
  </div><br>

    <ul class="accordion">
      <li>
        <%#= image_tag("http://www.iconsdb.com/icons/preview/color/477DCA/info-m.png", class: "biopic") %>
        <a href="javascript:void(0)" class="js-accordion-trigger">Biography â†“</a>
        <!--  <%#= image_tag("http://www.iconsdb.com/icons/preview/color/477DCA/info-2-xl.png", class: "js-accordion-trigger", :alt => "Bio", :title => "Bio") %> -->
          <ul class="submenu">
            <div class="bio">
              <%= @user.bio %>
            </div>
          </ul>
  </div>


  <h2> <%= @user.username %>'s content: </h2>
  <div class="all-content">
    <% @contents.each do |content| %>
      <%= render "#{content.provider.provider_type}_content", content: content %>
    <% end %>
  </div>

</div>
</body>
</html>

<script>
  jQuery('.js-accordion-trigger')
 // find the trigger
    .bind('click', function(){
      jQuery(this).parent().find('.submenu').slideToggle('fast');
 // apply the toggle to the ul
      jQuery(this).parent().toggleClass('is-expanded');
      event.preventDefault();
  });
</script>