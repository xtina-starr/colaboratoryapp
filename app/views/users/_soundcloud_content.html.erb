<div class="content-wrapper-soundcloud">
  <div class="soundcloud-content">
    <figure class="with-caption">
      <div class="video-wrapper">
        <iframe id="sc-widget" src="https://w.soundcloud.com/player/?url=http://api.soundcloud.com/tracks/<%= content.media_id %>" width="700" height="150" scrolling="no" frameborder="no"></iframe>
      </div>
    <div class="caption">
      <span class="media-title"> <%= link_to content.title, content_path(content.id) %> 
      <% if current_user && current_user.id == content.user_id %>
        <span class="delete">
          <%= link_to "delete", delete_content_path(content.id) %>
        </span>
        </span>
      <% end %>
      <p>By: <%= link_to content.user.username, user_path(content.user_id) %></p>

    <div class="tags">
      <div class="tag-c">
      <% if content.collab %>
        <%= "#collaborate" %>
      <% end %>
      </div>

      <div class="tag-f">
      <% if content.feedback %>
        <%= "#feedback" %>
      <% end %>
      </div>

      <div class="tag-l">
      <% if content.latest %>
        <%= "#latest" %>
      <% end %>
      </div>
    </div>
    </div>
    </figure>
  </div>
</div>